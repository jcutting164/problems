import java.util.ArrayList;
import java.util.Random;
import java.util.Scanner;

public class Hangman {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		ArrayList<String> words = new ArrayList<String>();
		
		words.add("Josh");
		words.add("Is");
		words.add("Cool");
		
		// selection of this round's word
		
		Random rand = new Random();

		String word = words.get(rand.nextInt(words.size()+0));
			
		System.out.println(word);
		// makes blank word
		ArrayList<String> myWord = new ArrayList<String>();
		for(int i=0; i<word.length(); i++){
			myWord.add("_");
		}
		Scanner scan = new Scanner(System.in);
		while(myWord.contains("_")){
			System.out.println("Current letters got");
			for(int i=0; i<myWord.size(); i++){
				System.out.print(myWord.get(i)+" ");
			}
			char c = scan.next().charAt(0);
			for(int i=0; i<word.length(); i++){
				if(c == word.charAt(i));
			}
		}
		

	}

}
